<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" 
    xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
    xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
    xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface"
    name="swivel">

    <xacro:property name="length_wheel" value="0.05" />             
    <xacro:property name="radius_wheel" value="0.05" />                  
    <xacro:macro name="default_inertial" params="mass">
               <inertial>
                       <mass value="${mass}" />
                       <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                                iyy="1.0" iyz="0.0"
                                izz="1.0" />
               </inertial>
    </xacro:macro>

    <xacro:macro name="support_platform" params="x y z num">
	<joint name="support_joint_${num}" type="fixed">
	<origin xyz="${x} ${y} ${z}" />
        <parent link="base_link" />
        <child link="support_${num}" />
	</joint>
	<link name="support_${num}">
        <visual>
            <geometry>
                    <cylinder length=".1" radius=".01"/>
                </geometry>
            <origin rpy="0 0 1.57075" xyz="${x} ${y} ${z}"/>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                    <box size="0.01 .03 0.01"/>
            </geometry>
        </collision>
        <xacro:default_inertial mass="0.01"/>
    </link>
    </xacro:macro>


    <link name="base_footprint">
        <visual>
            <geometry>
                    <box size="0.001 0.001 0.001"/>
                </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
        </visual>
        <xacro:default_inertial mass="0.0001"/>
    </link>
    <joint name="base_footprint_joint" type="fixed">
        <origin xyz="0 0 0.1" />
<!--<origin xyz="0 0 0" />-->
        <parent link="base_footprint" />
        <child link="base_link" />
    </joint>


       <!--base_link-->
    <link name="base_link">
        <visual>
            <geometry>
                    <cylinder length=".05" radius=".18"/>
                </geometry>
            <origin rpy="0 0 0" xyz="0 0 0.07"/>
        </visual>
        <collision>
            <geometry>
                    <cylinder length="0.0001" radius="0.15"/>
            </geometry>
        </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="0.4" ixy="0.0" ixz="0.0" iyy="0.4" iyz="0.0" izz="0.2"/>
    </inertial>
    </link>

	<!--support-->
	<support_platform x="0.05" y="0.05" z="0.06" num="1"/>
	<support_platform x="-0.05" y="0.05" z="0.06" num="2"/>
	<support_platform x="0.05" y="-0.05" z="0.06" num="3"/>
	<support_platform x="-0.05" y="-0.05" z="0.06" num="4"/>

	<!--gimbal-->
    <link name="gimbalplat_link">
        <visual>
            <geometry>
                    <cylinder length=".03" radius=".2"/>
                </geometry>
            <origin rpy="0 0 1.57075" xyz="0 0 0"/>
            <material name="black">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                    <cylinder length="0.038" radius="0.2"/>
            </geometry>
        </collision>
    <inertial>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    </link>

	<joint name="gimbal" type="fixed">
		<origin xyz="0 0 0.17" />
       		 <parent link="base_link" />
        	<child link="gimbalplat_link" />
	</joint>
